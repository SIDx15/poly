  <title>Document</title>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <h2 class="text-center"><%= title %></h2>
          <div id="loginbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
              <div class="panel panel-info">
                  <div class="panel-heading">
                      <div class="panel-title"> </div>
                       </div>  
                  <div class="panel-body" >
                      <form action="/" id="EmployeeForm" class="form-horizontal" method="post"  role="form">
                          <input type="hidden" name="id" value=<%= records._id %>">
                          <div id="signupalert"  class="alert alert-danger">
                             <p>Error</p>
                          </div>
                              
                          <div class="form-group">
                              <label for="username" class="col-md-3 control-label">code</label>
                              <div class="col-md-9">
                                  <input type="text" class="form-control" name="uname" value="<%= records.name %>" placeholder="Enter Your User Name">
                              </div>
                          </div>
                            
                          <div class="form-group">
                              <label for="password" class="col-md-3 control-label">date</label>
                              <div class="col-md-9">
                                  <input type="password" class="form-control" name="password" value="value=<%= records.date %>"placeholder="Enteryour password">
                              </div>
                          </div>  <div class="form-group">
                              <!-- Button -->                                        
                              <div class="col-md-offset-3 col-md-9">
                              <input type="submit" name="submit" value="login" class="btn btn-primary">   
                              </div>
                          </div>
                          <p>If you don't have account <a href="/signup">Create New Acoount</a></p>
                          
                      </form>
                   </div>
              </div>
  
         
         
          
   </div> 
      </div>
    </div>
  </body>
